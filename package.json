{
  "name": "kolibri-design-system",
  "version": "0.2.0",
  "private": true,
  "description": "Front-end components and utilities supporting the Kolibri Design System",
  "license": "MIT",
  "author": "Learning Equality",
  "scripts": {
    "dev": "nuxt content",
    "dev-lint": "npm-run-all --parallel dev lint-watch",
    "generate": "nuxt generate content",
    "lint-fix": "yarn lint -w",
    "lint-watch": "yarn lint -w -m",
    "lint": "kolibri-tools lint '**/*.{js,vue,scss,less,css}' -i '**/node_modules/**','content/.nuxt'",
    "test": "jest",
    "postinstall": "link-module-alias"
  },
  "_moduleAliases": {
    "~content": "./content",
    "~lib": "./lib",
    "~purecss": "./node_modules/purecss/"
  },
  "dependencies": {
    "aphrodite": "https://github.com/learningequality/aphrodite/",
    "css-element-queries": "^1.2.0",
    "keen-ui": "https://github.com/learningequality/Keen-UI/",
    "lockr": "^0.8.5",
    "material-design-icons": "^3.0.1",
    "popper.js": "^1.14.6",
    "purecss": "^0.6.2"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "@vuedoc/parser": "^1.4.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-nuxt": "^0.4.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^6.1.2",
    "jest": "^24.1.0",
    "kolibri-tools": "0.13.0-dev.9",
    "link-module-alias": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "nuxt": "^2.0.0",
    "prettier": "^1.18.2",
    "prismjs": "^1.15.0",
    "raw-loader": "0.5.1",
    "vue-jest": "^4.0.0-0",
    "vue-meta": "^2.3.2",
    "vue-prism-component": "^1.1.1"
  }
}
